{
	"env": { "node": true, "commonjs": true, "es2020": true },
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"parserOptions": { "ecmaVersion": 11, "sourceType": "script" },
	"globals": {
		"process": true,
		"driver": true,
		"wdSessionId": true,
		"tagSuite": true,
		"xdescribe": true,
		"describe": true,
		"before": true,
		"beforeEach": true,
		"after": true,
		"afterEach": true,
		"tagNoRunTest": true,
		"tagOnlyRunTest": true,
		"runTest": true,
		"specs": true,
		"isWebView": true,
		"data": true,
		"__dirname": true
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single", { "avoidEscape": true }],
		"semi": ["error", "always"],
		"no-var": "error",
		"no-prototype-builtins": "off",
		"require-await": "error",
		"eslint no-octal": "off",
		"no-octal-escape": "off",
		"init-declarations": ["error", "always"],
		"no-return-await": "error",
		"no-return-assign": "error",
		"no-useless-call": "error",
		"prefer-const": "error"
	}
}
